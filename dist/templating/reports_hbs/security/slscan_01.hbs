                          <div class="card text-center justify-content-center" style="width: 58px; height: 58px;">
                            <a href="./../12__INSIDER/{{APP}}.html"><img src="./../static/img/insider.png" height="50" width="50" alt="Insider SAST"></a>
                          </div>  
                        </div>
                        {{/if}}
