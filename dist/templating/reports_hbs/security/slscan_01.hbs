                            <a href="./../17__BEARER/{{APP}}.html"><img src="./../static/img/bearer.png" height="50" width="50" alt="Bearer"></a>
                          </div>  
                        </div>
                        {{/if}}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
